{
	"version": "2.0.0",
	"tasks": [
			{
					"type": "cppbuild",
					"label": "C/C++: clang build active file",
					"command": "/usr/bin/clang++",
					"args": [
							"-std=c++17",
							"-fcolor-diagnostics",
							"-fansi-escape-codes",
							"-Wall",
							"-g",
							"-I${workspaceFolder}/dependencies/include", //includes
							"-L${workspaceFolder}/dependencies/library", //lib
							"${workspaceFolder}/dependencies/library/libglfw.3.4.dylib", //lib
							"${workspaceFolder}/window.cpp", 
							"${workspaceFolder}/glad.c", 
							"-o",
							"${workspaceFolder}/window",            // Output executable
							"-framework",
							"OpenGL",
							"-framework",
							"Cocoa",
							"-framework",
							"IOKit",
							"-framework",
							"CoreVideo",
							"-framework",
							"CoreFoundation",
							"-Wno-deprecated"
					],
					"options": {
							"cwd": "${fileDirname}"
					},
					"problemMatcher": [
							"$gcc"
					],
					"group": {
							"kind": "build",
							"isDefault": true
					},
					"detail": "compiler: /usr/bin/clang++"
			}
	]
}